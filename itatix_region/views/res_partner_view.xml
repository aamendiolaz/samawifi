<odoo>
    <record model="ir.ui.view" id="res_partner_form_view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[2]/field[@name='function']" position="before">
               <field name="region_id" ptions="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
            </xpath>
        </field>
    </record>
     <record id="partner_region_action" model="ir.actions.act_window">
		<field name="name">Regiones</field>
		<field name="res_model">partner.region</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
	</record>

     <record id="partner_region_view_tree" model="ir.ui.view">
            <field name="name">partner_region.tree.view</field>
            <field name="model">partner.region</field>
            <field name="arch" type="xml">
                <tree string="Region">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
         <record id="partner_region_view_form" model="ir.ui.view">
            <field name="name">partner_region.form.view</field>
            <field name="model">partner.region</field>
            <field name="arch" type="xml">
                <form string="Region">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

	<!-- Sales Target Menuitem -->
	<menuitem id="menu_partner_region" parent="sale.menu_sale_config"
			  sequence="10" action="partner_region_action"/>
</odoo>
</odoo>
